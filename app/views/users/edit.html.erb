<h1>ユーザ編集ページ</h1>

<div class="user-edit-form">
  <%= form_with model: @user, url: users_path, local:true do |f|%>
  
  <label for="inputName" >Name</label>
  <%= f.text_field :name, autofocus: true, placeholder:"#{@user.name}" %>
  
  <label>メールアドレス</label>
  <%= f.email_field :email, placeholder:"#{@user.email}" %>
  
  <label>Image</label><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
  
  <%= f.submit "編集内容を保存"%>
  
  <% end %>
</div>
